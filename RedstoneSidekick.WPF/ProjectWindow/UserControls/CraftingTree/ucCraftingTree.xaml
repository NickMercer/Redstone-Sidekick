<UserControl x:Class="RedstoneSidekick.WPF.ProjectWindow.UserControls.ucCraftingTree"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RedstoneSidekick.WPF.ProjectWindow.UserControls"
             xmlns:ctctrls="clr-namespace:RedstoneSidekick.WPF.ProjectWindow.UserControls.CraftingTree"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=local:ucCraftingTree}">
    <StackPanel x:Name="LayoutRoot"  Background="{StaticResource RSBeige}">

        <TreeView Margin="5"
                  Background="Transparent"
                  BorderThickness="0"
                  ItemsSource="{Binding Items}"
                  HorizontalAlignment="Left">
            <TreeView.ItemTemplate>
                <DataTemplate>
                    <ctctrls:ucCraftingTreeItem Item="{Binding}"
                                                Margin="0 2"
                                                Width="300" />
                </DataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </StackPanel>
</UserControl>
